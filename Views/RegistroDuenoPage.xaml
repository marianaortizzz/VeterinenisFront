<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.Views.RegistroDuenoPage"
             Title="RegistroDuenoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <!-- Botón de regreso -->
            <Grid>
                <ImageButton Source="arrow_back.png" 
                             HorizontalOptions="Start"
                             VerticalOptions="Center"
                             HeightRequest="30"
                             WidthRequest="30"
                             BackgroundColor="Transparent"
                             />
            </Grid>

            <!-- Título -->
            <Label Text="Registro"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <!-- Contenedor verde -->
            <Frame CornerRadius="40"
                   BackgroundColor="#89986A"
                   Padding="20"
                   HasShadow="False">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Propietario"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White" />

                    <!-- Imagen circular -->
                    <Frame CornerRadius="100"
                           HeightRequest="150"
                           WidthRequest="150"
                           HorizontalOptions="Center"
                           BackgroundColor="Transparent"
                           Padding="0"
                           HasShadow="False">
                        <Image Source="propietario.jpg"
                               Aspect="AspectFill"
                               HeightRequest="150"
                               WidthRequest="150"/>
                    </Frame>

                    <!-- Entradas -->
                    <Label Text="Nombre" TextColor="White"/>
                    <Frame CornerRadius="20" BackgroundColor="#EDEEC8" Padding="10" HasShadow="False">
                        <Entry Placeholder="Ingrese Nombre"
                               Text="{Binding Nombre}"
                               BackgroundColor="Transparent"/>
                    </Frame>

                    <Label Text="Apellido" TextColor="White"/>
                    <Frame CornerRadius="20" BackgroundColor="#EDEEC8" Padding="10" HasShadow="False">
                        <Entry Placeholder="Ingrese Apellido"
                               Text="{Binding Apellido}"
                               BackgroundColor="Transparent"/>
                    </Frame>

                    <Label Text="Dirección" TextColor="White"/>
                    <Frame CornerRadius="20" BackgroundColor="#EDEEC8" Padding="10" HasShadow="False">
                        <Entry Placeholder="Ingrese Dirección"
                               Text="{Binding Direccion}"
                               BackgroundColor="Transparent"/>
                    </Frame>

                    <Label Text="Telefono" TextColor="White"/>
                    <Frame CornerRadius="20" BackgroundColor="#EDEEC8" Padding="10" HasShadow="False">
                        <Entry Placeholder="Ingrese Telefono"
                               Text="{Binding Telefono}"
                               Keyboard="Telephone"
                               BackgroundColor="Transparent"/>
                    </Frame>

                    <Label Text="Correo" TextColor="White"/>
                    <Frame CornerRadius="20" BackgroundColor="#EDEEC8" Padding="10" HasShadow="False">
                        <Entry Placeholder="Ingrese Correo"
                               Text="{Binding Correo}"
                               Keyboard="Email"
                               BackgroundColor="Transparent"/>
                    </Frame>

                    <!-- Botón -->
                    <Button Text="Continuar"
                            BackgroundColor="#F5F5F5"
                            TextColor="Black"
                            CornerRadius="20"
                            Margin="0,20,0,0"
                            HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>